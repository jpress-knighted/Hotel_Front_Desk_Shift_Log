
# Database - Google Cloud SQL Configuration
# Format for Cloud Run with Cloud SQL: postgresql://USERNAME:PASSWORD@localhost/DATABASE?host=/cloudsql/CONNECTION_NAME
# Connection name format: PROJECT_ID:REGION:INSTANCE_NAME
# Example: postgresql://postgres:yourpassword@localhost/hotel_shift_log?host=/cloudsql/my-project:us-central1:my-instance
DATABASE_URL="postgresql://postgres:yourpassword@localhost/hotel_shift_log?host=/cloudsql/project-id:region:instance-name"

# NextAuth Configuration
NEXTAUTH_SECRET="generate-with-openssl-rand-base64-32"
NEXTAUTH_URL="http://localhost:3000"

# Email Configuration (for high-priority alerts)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password-here"

